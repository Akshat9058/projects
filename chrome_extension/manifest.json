{
    "name": "Easy Text Saver",
    "version": "1.0",
    "description": "Paste your highlighted text into a file from anywhere on the web.",
    "manifest_version": 2,      
    "permissions": [
         "activeTab"
       ],
    "icons": {
        "128": "icon.png"
        },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
    
  }